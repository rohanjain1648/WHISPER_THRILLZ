# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/whisper-walls?retryWrites=true&w=majority
MONGODB_DB_NAME=whisper-walls

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# External API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
ELEVENLABS_API_KEY=your-elevenlabs-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Whisper API (OpenAI)
WHISPER_API_KEY=sk-your-whisper-api-key-here

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Geolocation
DEFAULT_SEARCH_RADIUS=1000
MAX_SEARCH_RADIUS=10000